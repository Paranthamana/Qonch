<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context="com.QonchAssets.Activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_bottom_shape" />

    <RelativeLayout
        android:id="@+id/rlVBottomView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_logo"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivQonchAssets"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/ivLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:src="@drawable/ic_qonch_assets"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivQonchAssets"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:text="@string/Login"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/green"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvResetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:text="@string/Reset_Password"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_70sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            android:layout_toEndOf="@+id/tvResetPassword"
            android:paddingBottom="@dimen/_45sdp"
            android:text="@string/New_User"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_13sdp"
            android:textStyle="normal"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_one_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                app:cardBackgroundColor="#fcfcfc"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_30sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_user"
                        android:drawablePadding="@dimen/_8sdp"
                        android:hint="@string/UserName"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:backgroundTint="@color/LightGray"
                        android:inputType="text"
                        android:fontFamily="@font/poppins_regular"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/LightGray"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal"
                        tools:ignore="UnusedAttribute" />

                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/LightGray"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:drawableStart="@drawable/ic_password"
                        android:drawablePadding="@dimen/_12sdp"
                        android:gravity="start"
                        android:hint="@string/Password"
                        android:imeOptions="actionDone"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/LightGray"
                        android:fontFamily="@font/poppins_regular"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal"
                        tools:ignore="UnusedAttribute" />

                    <CheckBox
                        android:id="@+id/cbRememberMe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:buttonTint="@color/colorPrimary"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/RememberMe"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        tools:targetApi="lollipop" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/cv_one_login"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="-35dp"
            android:background="@drawable/bg_loginbutton"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/Login"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            tools:ignore="ObsoleteLayoutParam" />

    </LinearLayout>


</RelativeLayout>