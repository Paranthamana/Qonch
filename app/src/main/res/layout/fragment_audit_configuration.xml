<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/rgScanning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black"
            android:visibility="gone"/>

        <RadioButton
            android:id="@+id/rbBarcodeScan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginEnd="150dp"
            android:buttonTint="@color/colorPrimary"
            android:drawableEnd="@drawable/ic_barcode"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/BarcodeScanning"
            android:checked="true"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            tools:ignore="UnusedAttribute" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/black" />

        <RadioButton
            android:id="@+id/rbQRCodeScan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginEnd="150dp"
            android:fontFamily="@font/poppins_regular"
            android:drawableEnd="@drawable/ic_qr_code"
            android:buttonTint="@color/colorPrimary"
            android:text="@string/QRCodeScanning"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/black" />

        <RadioButton
            android:id="@+id/rbRFIDScan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginEnd="150dp"
            android:buttonTint="@color/colorPrimary"
            android:drawableEnd="@drawable/ic_rfid"
            android:drawablePadding="@dimen/_28sdp"
            android:text="@string/RFIDScanning"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/black" />

    </RadioGroup>


</RelativeLayout>