<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.QonchAssets.Fragment.ListOfAssetsFragment">

    <RelativeLayout
        android:id="@+id/rlListOfAssertsToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/colorPrimary"
        tools:ignore="UselessParent"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvListOfAssetsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/ivListOfAssetsBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back"
            tools:ignore="ContentDescription"
            android:visibility="visible"/>

    </RelativeLayout>

    <com.mlsdev.animatedrv.AnimatedRecyclerView
        android:id="@+id/rvListOfAssets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlListOfAssertsToolbar"
        android:layout_margin="@dimen/_3sdp"
        android:scrollbars="none"
        app:animationDuration="1000"
        app:layoutAnimation="@anim/layout_animation_random_scale"
        app:layoutManagerOrientation="vertical"
        app:layoutManagerReverse="false"
        app:layoutManagerType="linear" />

    <ImageView
        android:id="@+id/ivNoData"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_no_chats"
        android:layout_centerInParent="true"
        tools:ignore="ContentDescription"
        android:visibility="gone"/>

</RelativeLayout>